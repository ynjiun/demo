<%= form_for([@post, @post.trackers.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :tspec %><br />
    <%= f.text_area :tspec %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
