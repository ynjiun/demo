<h1>Listing posts</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Spec</th>
    <th>Pricehistory</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.product %></td>
    <td><%= post.spec %></td>
    <td><%= post.pricehistory %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

